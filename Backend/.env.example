# Environment Configuration
NODE_ENV=development
PORT=9000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/otgms

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
ACCESS_TOKEN_SECRET=your_super_secure_access_token_secret_here
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_here

# Email Configuration (for OTP)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# App Configuration
APP_NAME=OTGMS
SUPPORT_EMAIL=support@otgms.com

# Security Configuration (comma-separated IPs, empty means allow all)
ALLOWED_IPS=

# External APIs
CAR_SPECS_API_URL=https://mycar.specsapi.com/api/v2
NOMINATIM_API_URL=https://nominatim.openstreetmap.org

# Logging
LOG_LEVEL=info
